@{ 
    Navigation navigation = (Navigation)ViewBag.Navigation;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Seo.Title</title>
    <meta name="description" content="@ViewBag.Seo.Description">
    <meta name="keywords" content="@ViewBag.Seo.Keywords">
	<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
	<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
	<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
	<link rel="mask-icon" href="/safari-pinned-tab.svg" color="#bacd1d">
	<link rel="manifest" href="/manifest.json">
	<meta name="msapplication-TileColor" content="#bacd1d">
	<meta name="theme-color" content="#bacd1d">
    <link rel="stylesheet" href="~/libs/styles/style.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    <script src="~/libs/scripts/script.js" asp-append-version="true" async></script>
</head>
<body>
    @await Html.PartialAsync("_Popups")

    <div style="display: none">
        @await Html.PartialAsync("_Symbols")
    </div>

    @await Html.PartialAsync("_Header", navigation)

    <main class="main container-fluid">

        @RenderBody()

    </main>

    @await Html.PartialAsync("_Footer")

    <script src="~/js/layout.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
