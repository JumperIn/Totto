@model List<PromoViewModel>

<section class="discounts">
	<div class="discounts__shadow-start"></div>
	<div class="cover">
		<div class="container-fluid">
            <div class="row align-items-start">

                @foreach (var promo in Model)
                {
                    if (string.IsNullOrEmpty(promo.Url))
                    {
                        <div class="discounts__wrapper col">
                            <div class="discounts__img" style="background-image: url(@promo.ImageUrl)"></div>
                            <p class="discounts__text">@promo.Title</p>
                            <p class="discounts__promocode">@promo.Content</p>
                        </div>
                    }
                    else
                    {
                        <a href="@promo.Url" class="discounts__wrapper col">
                            <div class="discounts__img" style="background-image: url(@promo.ImageUrl)"></div>
                            <p class="discounts__text">@promo.Title</p>
                            <p class="discounts__promocode">@promo.Content</p>
                        </a>
                    }
                }

            </div>
		</div>
	</div>
	<div class="discounts__shadow-end"></div>
</section>