@model List<PromoProductViewModel>

<section class="new-products">
	<div class="cover">
		<div class="container-fluid">
            <div class="row new-products__wrapper">

                @foreach (var promo in Model)
                {
                    if (string.IsNullOrEmpty(promo.Url))
                    {
                        <div class="new-product col-6 col-lg-3">
                            <div class="new-product__img" style="background-image: url(@promo.ImageUrl)"></div>
                            <div class="new-product__wrapper">
                                <h3 class="new-product__title">@promo.Title</h3>
                                <p class="new-product__text">@promo.Content</p>
                            </div>
                        </div>
                    }
                    else
                    {
                        <a href="@promo.Url" class="new-product col-6 col-lg-3">
                            <div class="new-product__img" style="background-image: url(@promo.ImageUrl)"></div>
                            <div class="new-product__wrapper">
                                <h3 class="new-product__title">@promo.Title</h3>
                                <p class="new-product__text">@promo.Content</p>
                            </div>
                        </a>
                    }
                }

            </div>
		</div>
	</div>
</section>