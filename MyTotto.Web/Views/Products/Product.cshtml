@model ProductPage

@{
    ViewBag.Seo = Model.Seo;
    ViewBag.Navigation = Model.Navigation;
}

<div class="modal modal-product-carousel-wrapper hidden">
	<div class="modal-content modal-product-carousel js-modal-product-carousel">
		<button class="modal-content-close js-modal-product-carousel-close">
			<div class="modal-content-close__text">Закрыть</div>
			<svg class="modal-icon-button-cross">
				<use xlink:href="#icon-button-cross"></use>
			</svg>
		</button>
		<div class="modal-wrapper">
			<div class="product-carousel-wrapper">
				<div class="product-carousel js-product-carousel">
					@foreach (var image in Model.Product.ImageUrls)
					{
						<div class="col-12">
							<div class="product-carousel-img" style="background-image: url(@image)" alt="@Model.Product.Title"></div>
						</div>
					}
				</div>
				<div class="product-carousel-button product-carousel-button_left js-product-carousel-button_left">
					<svg class="product-carousel-button-icon">
						<use xlink:href="#icon-angle-left"></use>
					</svg>
				</div>
				<div class="product-carousel-button product-carousel-button_right js-product-carousel-button_right">
					<svg class="product-carousel-button-icon">
						<use xlink:href="#icon-angle-right"></use>
					</svg>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="product-info">
	@*кнопка назад и расширенный подбор*@ 
	@*<div class="product-info__nav cover">
		<a href="" class="o-button o-button-back">
			<p class="o-button-back__text">назад</p>
			<svg class="o-button-back__icon">
				<use xlink:href="#icon-arrow-back"></use>
			</svg>
		</a>
		<a href="" class="o-button o-button_main">
			<svg class="o-button-selection__icon">
				<use xlink:href="#icon-menu"></use>
			</svg>
			<p class="o-button-selection__text">расширенный подбор</p>
		</a>
	</div>*@ 
	<div class="breadcrumbs-wrapper cover">
		<div class="breadcrumbs">
			@foreach (var breadcrumb in Model.Breadcrumbs)
			{
				<a href="@breadcrumb.Link" class="breadcrumbs__item breadcrumb">@breadcrumb.Title</a>
			}
		</div>
		<div class="o-favorites-button o-button">
			<a class="o-quick-order-button o-button o-button_main">
				<svg class="o-quick-order-button__icon-basket">
					<use xlink:href="#icon-basket"></use>
				</svg>
				<p class="o-quick-order-button__text">быстрый заказ сейчас</p>
			</a>
			<svg class="o-favorites-button__icon-heart">
				<use xlink:href="#icon-heart-3"></use>
			</svg>
		</div>
	</div>
	<div class="product-info__body cover">
		<div class="product-info__left-side-wrapper col-6">
			@*<div class="product-info__main-img-wrapper">
				<div class="product-info__main-img-carousel">
					@foreach (var image in Model.Product.ImageUrls)
					{
						<div class="col-12">
							<div class="product-info__main-img" style="background-image: url(@image)" alt="@Model.Product.Title"></div>
						</div>
					}
				</div>
			</div>*@ 
			<div class="product-info__main-img" style="background-image: url(@Model.Product.ImageUrls[0])" alt="@Model.Product.Title"></div>
            <div class="product-info__sub-images-wrapper">
                @foreach (var image in Model.Product.ImageUrls)
                {
                    <div class="product-info__sub-img-wrapper col-4">
                        <div class="product-info__sub-img" style="background-image: url(@image)" alt="@Model.Product.Title"></div>
                    </div>
                }
            </div>
			<div class="product-info__second-info-wrapper">
				<h3 class="product-info__second-info-title">Дополнительная информация</h3>
				<p class="product-info__second-info-text">
					@Model.Product.AdditionalInfo
				</p>
			</div>
		</div>
        <div class="product-info__right-side-wrapper col-6">
            <p class="product-info__article">Артикул: <span id="productId">@Model.Product.Id</span></p>
            <h3 class="product-info__title">@Model.Product.Title</h3>
            <div class="product-info__actions">
                <div class="product-info__actions-row">
                    <div class="product-info__price col-4">@Model.Product.Price Р</div>
                    <div class="col-4">
                        <button class="product-info__basket-button o-button o-button_main">В корзину</button>
                    </div>
                    @*<div class="product-info__bonus col-4">Начисляемые бонусы: 330</div>*@
                </div>
                <div class="product-info__actions-row">
                    <div class="product-info__quantity col-4">Количество</div>
                    <div class="product-info__quantity-count col-4">
                        <button class="product-info__quantity-minus">
                            <svg class="product-info__quantity-icon">
                                <use xlink:href="#icon-arrow-left"></use>
                            </svg>
                        </button>
                        <input class="product-info__quantity-input" type="number" value="1">
                        <button class="product-info__quantity-plus">
                            <svg class="product-info__quantity-icon">
                                <use xlink:href="#icon-arrow-right"></use>
                            </svg>
                        </button>
                    </div>
                </div>
            </div>
            
            <div>
                @foreach (var weight in Model.Product.Weights)
                {
                    @* TODO: здесь веса подставляем! Ну или где-то там *@
                    <span>@weight</span>
                }
            </div>

            <h3 class="product-info__options-title">ИНФОРМАЦИЯ О ТОВАРЕ</h3>
            <div class="product-info__options">
                <div class="product-info__options-row">
                    <div class="product-info__options-key col-4">Производитель</div>
                    <div class="product-info__options-value col-4">@Model.Product.Manufacturer</div>
                </div>
                <div class="product-info__options-row">
                    <div class="product-info__options-key col-4">Состав</div>
                    <div class="product-info__options-value col-8">
                        @Model.Product.Compounds
                    </div>
                </div>
            </div>
            <div class="product-info__social-network">
                <div class="product-info__like">
                    <p class="product-info__like-text">Нравится продукт?</p>
                    <svg class="product-info__like-icon">
                        <use xlink:href="#icon-like"></use>
                    </svg>
                    <span class="product-info__likes-count">@Model.Product.LikesCount</span>
                </div>
                <div class="product-info__social-network-icons-wrapper">
                    <div class="product-info__social-network-icon-wrapper">
                        <svg class="product-info__social-network-icon">
                            <use xlink:href="#icon-whatsapp"></use>
                        </svg>
                    </div>
                    <div class="product-info__social-network-icon-wrapper">
                        <svg class="product-info__social-network-icon">
                            <use xlink:href="#icon-fb"></use>
                        </svg>
                    </div>
                    <div class="product-info__social-network-icon-wrapper">
                        <svg class="product-info__social-network-icon">
                            <use xlink:href="#icon-vk"></use>
                        </svg>
                    </div>
                    <div class="product-info__social-network-icon-wrapper">
                        <svg class="product-info__social-network-icon">
                            <use xlink:href="#icon-telegram"></use>
                        </svg>
                    </div>
                    <div class="product-info__social-network-icon-wrapper">
                        <svg class="product-info__social-network-icon">
                            <use xlink:href="#icon-inst"></use>
                        </svg>
                    </div>
                    <div class="product-info__social-network-icon-wrapper">
                        <svg class="product-info__social-network-icon">
                            <use xlink:href="#icon-tw"></use>
                        </svg>
                    </div>
                </div>
            </div>
            <h3 class="product-info__description-title">Описание товара</h3>
            <div class="product-info__description">
                @Model.Product.Description
            </div>
        </div>
	</div>

	<div class="o-delivery-wrapper cover">
		<p class="o-delivery">
			Доставка покупок выполняется в течение 2 рабочих дней. 
			Если на момент оформления заказа выбранный клиентом товар отсутствует на центральном складе, 
			то его передача в курьерскую службу откладывается на тот срок, который необходим для поступления 
			продукции на склад. Доставка товаров осуществляется с 09:00 до 18:00 по рабочим дням и с 11:00 до 
			17:00 в субботу. Оформляя заказ на сайте компании, Вы можете выбрать удобный для Вас период доставки 
			– 09:00−14:00 или 14:00−18:00.
		</p>
	</div>
</div>

<script src="~/js/product.js" asp-append-version="true"></script>