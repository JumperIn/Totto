@model SectionPage

@{
    ViewBag.Seo = Model.Seo;
    ViewBag.Navigation = Model.Navigation;
}


<div class="catalog">
	<div class="catalog__nav cover">
		<a href="" class="o-button o-button-back">
			<p class="o-button-back__text">назад</p>
			<svg class="o-button-back__icon">
				<use xlink:href="#icon-arrow-back"></use>
			</svg>
		</a>
		<a href="" class="catalog__selection o-button o-button_main">
			<svg class="o-button-selection__icon">
				<use xlink:href="#icon-menu"></use>
			</svg>
			<p class="o-button-selection__text">расширенный подбор</p>
		</a>
	</div>
	<div class="breadcrumbs-wrapper cover">
		<div class="breadcrumbs">
			@foreach (var breadcrumb in Model.Breadcrumbs)
			{
				<a href="@breadcrumb.Link" class="breadcrumbs__item breadcrumb">@breadcrumb.Title</a>
			}
		</div>
		<div class="catalog__num-product-dysplay-wrapper">
			<p class="catalog__num-product-dysplay-text">Отображать по:</p>
			<a href="" class="catalog__num-product-dysplay catalog__num-product-dysplay_s">12</a>
			<a href="" class="catalog__num-product-dysplay catalog__num-product-dysplay_m">24</a>
			<a href="" class="catalog__num-product-dysplay catalog__num-product-dysplay_l">36</a>
		</div>
	</div>
	<div class="catalog__title-wrapper cover">
		<h3 class="catalog__title">Кремы для лица</h3>
		<p class="catalog__products-counts">@Model.ProductsCount предметов</p>
	</div>
	<div class="catalog__sorting-wrapper cover">
		<div class="catalog__sorting">
			<p class="catalog__sorting-text">Сортировка</p>
			<div class="o-sorting-select-wrapper">
				<select class="catalog__sorting-select o-sorting-select">
					<option class="catalog__sorting-item o-sorting-option">По умолчанию</option>
					<option class="catalog__sorting-item o-sorting-option">По возрастанию цены</option>
					<option class="catalog__sorting-item o-sorting-option">По убыванию цены</option>
					<option class="catalog__sorting-item o-sorting-option">По возрастанию названия</option>
					<option class="catalog__sorting-item o-sorting-option">По убыванию названия</option>
					<option class="catalog__sorting-item o-sorting-option">По новинкам</option>
				</select>
				<svg class="o-sorting-select-icon">
					<use xlink:href="#icon-button-arrow-top-bottom"></use>
				</svg>
			</div>
		</div>
		<ul class="o-pagination">
			<li class="o-pagination__page o-pagination__page_first o-pagination__page_disabled">
				<svg class="o-pagination__page-icon">
					<use xlink:href="#icon-arrow-left"></use>
				</svg>
				<svg class="o-pagination__page-icon">
					<use xlink:href="#icon-arrow-left"></use>
				</svg>
			</li>
			<li class="o-pagination__page o-pagination__page_previous">
				<svg class="o-pagination__page-icon">
					<use xlink:href="#icon-arrow-left"></use>
				</svg>
			</li>
			@for (int i = 0; i < Model.Pagination.Count; i++)
			{
				int pageNumber = i + 1;
				<li class="o-pagination__page o-pagination__page_num o-pagination__page_active">@pageNumber</li>
			}
			<li class="o-pagination__page o-pagination__page_next">
				<svg class="o-pagination__page-icon">
					<use xlink:href="#icon-arrow-right"></use>
				</svg>
			</li>
			<li class="o-pagination__page o-pagination__page_last">
				<svg class="o-pagination__page-icon">
					<use xlink:href="#icon-arrow-right"></use>
				</svg>
				<svg class="o-pagination__page-icon">
					<use xlink:href="#icon-arrow-right"></use>
				</svg>
			</li>
		</ul>
	</div>

</div>





