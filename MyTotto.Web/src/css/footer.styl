.footer
	background-color: #fff

.footer-menu
	padding: 30px 80px

.footer-block
	padding-right: 5px

.connection__title,
.footer-block__title
	padding: 10px 0
	font-weight: 700
	font-size: 16px
	color: gray-darken

.footer-block__title
	margin: 0
	color: gray-darken

.connection__text,
.contacts-text
	padding-bottom: 10px
	font-weight: 400
	font-size: 13px
	text-transform: uppercase
	color: gray

.contacts__text
	text-transform: none

.connection__form
	flex(row)

.connection__input
	size(100%, 36px)
	padding: 4px 35px 4px 8px
	font-size: 13px
	border: 1px solid #CFCFCF
	border-top-left-radius: 4px
	border-bottom-left-radius: 4px
	color: #C9C9C9

.connection__button
	size(35px, 36px)
	border: 1px solid #CFCFCF
	border-left: 0px
	border-top-right-radius: 4px
	border-bottom-right-radius: 4px
	background-color: #fff
	cursor: pointer

.connection__button_icon
	font-size: 10px
	color: #808080

.footer-block__item
	margin: 0
	padding: 3px 0
	font-size: 16px
	list-style-type: none

.footer-block__link
	font-size: 13px
	color: #178e9d
	transition: color 200ms ease-in-out

.footer-block__link:hover
	color: #0D535C

.categories-item
	text-transform: uppercase

.footer-copyright
	padding: 0 80px

.footer-copyright__text
	margin-top: 10px
	padding: 5px 0
	font-size: 13px
	color: gray-darken

@media (max-width: 767px)
	.footer-block
		border-bottom: 1px solid rgba(0, 0, 0, 0.1)
	.footer-block__title-wrapper
		flex(row, space-between, center)
		cursor: pointer

	.footer-block__title
		display: flex
		margin: 0
		padding-right: 15px
		font-size: 16px
		font-weight: 700
		color: grey-darken

	.footer-block__body
		padding-bottom: 10px

@media (max-width: 1199px)
	.footer-menu
		padding: 20px 20px