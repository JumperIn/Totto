.footer
	flex(column, center, center)
	background-color: #fff

.footer__wrapper
	padding: 45px 0 40px 0

.footer-block
	padding-right: 5px

.connection__title,
.footer-block__title
	padding: 10px 0
	font(16px, 700, gray-darken)

.footer-block__title
	margin: 0
	color: gray-darken

.connection__text,
.contacts-text
	padding-bottom: 10px
	font(13px,, gray)
	text-transform: uppercase

.contacts__text
	text-transform: none

.connection__form
	flex(row)

.connection__input
	size(100%, 36px)
	padding: 4px 35px 4px 8px
	font(13px,, #C9C9C9)
	border: 1px solid #CFCFCF
	border-top-left-radius: 4px
	border-bottom-left-radius: 4px

.connection__button
	size(35px, 36px)
	border: 1px solid #CFCFCF
	border-left: 0px
	border-top-right-radius: 4px
	border-bottom-right-radius: 4px
	background-color: #fff
	cursor: pointer

.connection__button_icon
	font(10px,, #808080)

.footer-block__item
	margin: 0
	padding: 3px 0
	list-style-type: none

.footer-block__link
	font(13px,, #178e9d)
	transition: color 200ms ease-in-out

.footer-block__link:hover
	color: #0D535C

.categories-item
	text-transform: uppercase

.footer-copyright
	flex(, center)
	width: 100%
	background-color: main-color

.footer-copyright__wrapper
	flex(, space-between)
	padding: 35px 0

.footer-copyright__text
	flex(,,center)
	font(14px, 100, #c6dd7e)

.footer-copyright__link
	font(14px, 100, #fff)

.footer-copyright__icons
	flex(, flex-end, center)

.footer-copyright__icon
	flex(center, center)
	margin-left: 5px

.footer-icon
	size(25px, 25px)
	color: icon-color

.footer-icon:hover
	color: icon-color-hover
	stroke: icon-color

@media (max-width: 767px)
	.footer-block
		border-bottom: 1px solid rgba(0, 0, 0, 0.1)
	.footer-block__title-wrapper
		flex(row, space-between, center)
		cursor: pointer

	.footer-block__title
		display: flex
		margin: 0
		padding-right: 15px
		font(16px, 700, grey-darken)

	.footer-block__body
		padding-bottom: 10px

