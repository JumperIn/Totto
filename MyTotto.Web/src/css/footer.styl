.footer
	background-color: #F2F2F2

.footer-menu
	padding: 0 80px

.connection__title,
.office__title,
.store__title,
.categories__title,
.contacts__title,
.socnetwork__title
	padding: 30px 0 10px 0
	font-family: 'Open-sans', sans-serif
	font-weight: 700
	font-size: 16px
	color: #28282f

.office__title-link,
.store__title-link,
.categories__title-link,
.contacts__title-link,
.socnetwork__title-link
	color: #28282f

.connection__text,
.contacts__text
	padding-bottom: 10px
	font-family: 'Open-sans', sans-serif
	font-weight: 400
	font-size: 13px
	text-transform: uppercase
	color: #89899a

.contacts__text
	text-transform: none

.connection__form
	display: flex
	flex-direction: row

.connection__input
	height: 36px
	width: 100%
	padding: 4px 35px 4px 8px
	font-family: 'Open-sans', sans-serif
	font-size: 13px
	border: 1px solid rgb(207, 207, 207)
	border-top-left-radius: 4px
	border-bottom-left-radius: 4px
	color: rgb(201, 201, 201)

.connection__button
	height: 36px
	width: 35px
	border: 1px solid rgb(207, 207, 207)
	border-left: 0px
	border-top-right-radius: 4px
	border-bottom-right-radius: 4px
	background-color: #fff
	cursor: pointer

.connection__button_icon
	font-size: 10px
	color: #808080

.office__item,
.store__item,
.categories__item,
.contacts__item,
.socnetwork__item
	padding: 3px 0
	list-style-type: none

.office__link,
.store__link,
.categories__link,
.contacts__link,
.socnetwork__link
	font-family: 'Open-sans', sans-serif
	font-size: 13px
	color: #178e9d
	transition: color 200ms ease-in-out

.office__link:hover,
.store__link:hover,
.categories__link:hover,
.contacts__link:hover,
.socnetwork__link:hover
	color: #0D535C

.categories__item
	text-transform: uppercase

.footer-copyright
	padding: 0 80px

.footer-copyright__text
	margin-top: 10px
	padding: 5px 0
	font-family: 'Open-sans', sans-serif
	font-size: 13px
	color: #28282f