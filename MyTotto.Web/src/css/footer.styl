.footer
	flex(column, center, center)
	background-color: #fff

.footer__wrapper
	padding: 45px 0 40px 0

.footer-connection
.footer-block
	padding: 0 15px

.footer-connection__title
.footer-block__title
	padding-bottom: 20px
	font(14px, 300, #4e4e4e)
	text-transform: uppercase



.footer-connection__form
	padding-bottom: 20px

.footer-connection__input
	height: 40px
	padding-left: 20px
	font(14px, 100, stroke-color)
	border: 1px solid stroke-color
	border-radius: (@height / 2)
	background: #fff
	transition: background-color 200ms ease-in-out

.footer-connection__input::placeholder
	font(14px, 100, stroke-color)

.footer-icon-button-search
.footer-icon-envelope
	size(30px, 30px)
	color: main-color
	transition: color 200ms ease-in-out

.footer-icon-button-search:hover
.footer-icon-envelope:hover
	color: secondary-color

.footer-connection__button
	position: absolute
	right: 0px
	top: 4px
	border: none
	background: none
	cursor: pointer



// .footer-connection__button_icon
// 	font(10px,, #808080)

.footer-block__item
	margin: 0
	padding: 3px 0
	list-style-type: none

.footer-block__link
	font(14px, 100, #4e4e4e)
	transition: color 200ms ease-in-out

.footer-block__link:hover
	text-decoration: underline
	color: #464647

.footer-copyright
	flex(, center)
	width: 100%
	background-color: main-color

.footer-copyright__wrapper
	flex(, space-between)
	padding: 35px 0

.footer-copyright__text
	flex(,,center)
	font(14px, 100, #c6dd7e)

.footer-copyright__link
	font(14px, 100, #fff)

.footer-copyright__icons
	flex(, flex-end, center)

.footer-copyright__icon
	flex(center, center)
	margin-left: 5px

.footer-icon
	size(25px, 25px)
	color: icon-color

.footer-icon:hover
	color: icon-color-hover
	stroke: icon-color

@media (max-width: 767px)
	.footer-block
		border-bottom: 1px solid rgba(0, 0, 0, 0.1)
	.footer-block__title-wrapper
		flex(row, space-between, center)
		cursor: pointer

	.footer-block__title
		display: flex
		margin: 0
		padding-right: 15px
		font(16px, 700, grey-darken)

	.footer-block__body
		padding-bottom: 10px

