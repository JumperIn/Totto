.product__info
	flex(column, flex-start, center)

.product__name
	display: block
	height: 43px
	margin-bottom: 15px
	font(13px, 500)
	text-align: start
	overflow: hidden

.product__price-before
	font(14px)

.product__price-before-strike
	text-decoration: line-through
	color: main-color

.product__price-after
	font(22px, 500)

.product-sale
	flex(column, space-around, center)

.product-sale_red
	sale(#F94141)

.product-sale_orange
	sale(#FC7640)

.product-sale_light-blue
	sale(#52DBD1)

.product-sale_blue
	sale(#27ABE0)

.product-sale_purple
	sale(#BC48B9)

.product__inbasket-icon_position
	flex(, flex-end, center)
	z-index: 2

.product-icon-button-basket
	size(40px, 40px)
	color: main-color
	transition: color 200ms ease-in-out

.product-icon-button-basket:hover
	color: secondary-color

.product__inbasket
	width: 100%
	padding-top: 11px
	z-index: 2

.product__inbasket_buy
	flex(, center, center)
	size(100%, 40px)
	font(14px, 500, #fff)
	text-transform: uppercase
	border-radius: 20px
	background-color: main-color
	transition: background-color 200ms ease-in-out
	
.product__inbasket_buy:hover
	background-color: secondary-color

.product__favorites
	position: absolute
	top: 25px
	right: 25px
	z-index: 2

.product-icon-button-heart
	size(42px, 42px)

.product__inbasket-icon:hover::before
.product__favorites:hover::before
	content: attr(data-title)
	position: absolute
	left: 110%
	padding: 5px 10px
	background-color: rgba(186, 205, 29, .7)
	font(12px, 300)
	border: 1px solid rgba(149, 167, 0, .7)
	border-radius: 5px

.products__link-wrapper
	flex(, center)
	position: relative
	size(100%, 51px)
	padding-top: 15px

.products__link
	flex(, center, center)
	size(154px, 36px)
	font(14px, 100, #fff)
	border-radius: 18px
	background-color: main-color
	transition: background-color 200ms ease-in-out
	z-index: 2

.products__link:hover
	background-color: secondary-color

.products__link-wrapper::before
	content: ''
	position: absolute
	top: 34px
	border-top: solid 1px main-color
	width: 100%
	z-index: 1

@media (max-width: 1199px)
	.main-section-content
		width: 100%

@media (max-width: 767px)
	.main-nav__wrapper
		flex(column, center, center)

	.main-nav_center
		padding-bottom: 10px