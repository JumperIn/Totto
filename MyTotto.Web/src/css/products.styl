.main-section-content
	z-index: 2

.main-content
	flex(column, flex-start, center)
	padding: 20px 0 40px 0
	min-width: 290px
	background: #fff

.main-nav
	flex(, center)
	padding-bottom: 20px
	border-bottom: solid 1px stroke-color

.main-nav__wrapper
	flex(, space-between)
	width: 100%

.main-nav__list
	flex(row, center)
	flex-wrap: wrap
	list-style-type: none
	margin: 0

.main-nav_center
	padding-right: 10px

.main-nav__item
	flex(row, flex-start, center)
	padding: 8px 20px
	font(,, #4d4d4d)
	border: 2px solid #fff
	border-radius: 20px
	text-transform: uppercase
	transition: color 200ms ease-in-out
	cursor: pointer

.main-nav__item_active
	border: 2px solid #eeeeb1

.main-nav__selection
	flex(row, center, center)
	size(240px, 40px)
	min-width: 240px
	background-color: main-color
	border-radius: 20px
	transition: background-color 200ms ease-in-out

.main-nav__selection:hover
	background-color: secondary-color

.product-icon-menu
	size(20px, 20px)
	color: #fff

.main-nav__selection_text
	padding-left: 12px
	font(14px, 500, #fff)
	text-transform: uppercase

.button-left,
.button-right
	flex(row, center, center)
	color: #d4d4d4
	cursor: pointer

.products
	padding-top: 80px

.products-wrapper
	display: flex
	flex-wrap: nowrap
	transition: transform 500ms ease-in-out

.products__item
	padding: 0 15px 30px 15px

.product
	flex(column, center, center)
	position: relative
	padding: 25px
	border: solid 1px stroke-color

.product__link
	position: absolute
	display: block
	size(100%, 100%)
	z-index: 1

.product__img
	position: relative
	size(100%, 230px)
	margin-bottom: 10px
	background-position: center
	background-size: cover
	background-repeat: no-repeat

