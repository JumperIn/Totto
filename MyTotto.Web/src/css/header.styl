@media (max-width: 767px)
	.menu__list
		// display: none
		flex-direction: column
		position: absolute
		top: 100%
		left: 0px
		height: auto
		width 100%
		align-items: start
		background: white
		z-index: 200
	.menu-link
		display: flex
		align-items: center
		padding: 0px 20px
		height: 80px
		width: 140px
		cursor: pointer
		font-size: 14px
		font-weight: 500
		text-transform: uppercase
		transition: background-color 200ms ease-in-out
	.menu__wrap:hover,
	.menu-link:hover
		background-color: red-light
	.menu-link__icon1
		padding-right: 10px
		font-size: 24px
	.menu-link__icon2
		padding-left: 5px
		font-size: 16px
	.menu_drop
		width: 100%
		display: flex
		flex-direction: column
	.menu-drop
		display: flex
		position: relative
		box-shadow: none
	.menu-drop__list
		display: flex
		flex-direction: column
		padding: 0px 0px 15px 0px
	.menu-drop__item
		padding-left: 20px
		color: blue-light
	.menu-drop_padding
		display: flex
		flex-direction: column
		padding: 0px
	.menu__wrap
		display: flex
		flex-direction: row
		height: 48px
		width: 100%
		padding: 0px
		border-top: solid 1px red-light
		background-color: #FFFAFA
		transition: background-color 200ms ease-in-out
	.menu-drop__wrap
		display: flex
		flex-direction: row
		align-items: center
		height: 48px
		width: 100%
		padding: 0px
		border-top: solid 1px #ededed
		background-color: #fff
	.menu-item
		width: 100%
		padding: 0px 0px 0px 20px
		font-size: 14px
		color: #000
	.menu-drop__list-header
		height: 100%
		width: 100%
		padding: 0px 0px 0px 20px
		font-size: 12px
		font-weight: 400
		line-height: 48px
		text-transform: uppercase
		color: #000
		transition: color 200ms ease-in-out
	.menu-item__icon2,
	.menu-drop__icon
		height: 48px
		width: 50px
		padding: 0px
		line-height: 48px
		text-align: center
		font-size: 18px
		cursor: pointer
	.menu-item__icon2
		color: #fff
	.menu-drop__icon
		color: #bfbfbf
	.menu-item__icon1
		display: flex
		padding-right: 10px
		font-size: 24px
		color: #a8a8a8
	.accordion-active
		background-color: red-light
	.icon-accordion-active
		background-color: #FFD5D1
	.sub-accordion-active
		background-color: #E0E0E0
	.menu-drop__list-header:hover
		color: blue-light
		
