.header
	background: #ffffff

.header-title
	flex(row, center, stretch)
	border-bottom: 1px solid #EDEDED

@media (min-width: 768px)
	.header-info__phone_media
		display: none
	.header-info__phone
		display: flex
	.header-info-icons
		display: flex
	.header-info-logo
		padding: 15px 0px

@media (max-width: 991px) 
	.header-title__name
		display: none
	.header-info__phone
		font-size: 20px
	.menu
		width: 720px

@media (min-width: 992px) 
	.header-info__phone
		font-size: 24px 
@media (max-width: 1199px)
	.menu-drop
		width: 100%
		left: 0
		
@media (min-width: 1200px) 
	.menu-drop
		width: 120%
		left: -10%

@media (max-width: 1280px)
	.menu
		width: 720px
		
@media (max-width: 767px)
	.header-info__phone_media
		flex(row, center, center)
		padding: 5px 0px
	.header-title__menu
		display: none
	.header-info__phone
		display: none
	.header-info-logo
		padding: 10px 20px 10px 0px
	.menu
		width: 100%


.header-title__name
	font-size: 13px
	color: gray
	padding: 5px 0px

.header-title__name_h
	font-size: 13px
	margin: 0px
	font-weight: normal

.header-title__menu
	padding: 5px 0px

.header-title__list
	flex(row, flex-end)
	margin: 0
	list-style-type: none

.header-title__item
	padding-left: 10px
	font-size: 13px
	color: gray

.header-title__item_h
	margin: 0px
	font-size: 13px
	font-weight: normal

.header-info__phone
	justify-content: center
	align-items: center

.header-info__phone_color
	color: gray


.header-info-search
	flex(row, center, center)

.header-info-search_flex
	display: flex

.header-info-search__input
	position: relative
	height: 35px
	padding-left: 20px
	text-transform: uppercase
	font-size: 13px
	border: 1px solid #ededed
	border-radius: 22px
	background: #ededed
	color: gray
	transition: background-color 200ms ease-in-out

.header-info-search__input:hover,
.header-info-search__input:focus
	background: #fff

.header-info-search__input:active
	border: none

.header-info-search__button
	position: absolute
	right: 5px
	top: 4px
	font-size: 23px
	border: none 
	background: none 
	color: gray
	cursor: pointer


.header-info-icons
	justify-content: center
	align-items: center

.header-info-icons__item
	padding-left: 10px
	color: gray
	transition: color 200ms ease-in-out

.header-info-search__button
	transition: color 200ms ease-in-out

.header-info-icons__item:hover,
.header-info-search__button:hover
	color: blue-light

@media(max-width: 767px)
	.header-info-icons
		position: absolute
		top: 94px
		right: 0px
		z-index: 1
	.header-info-icons__item
		font-size: 26px
		color: #fff
	.header-info-icons__item:hover
		color: #fff

.header-nav
	display: flex
	background: #FFE3E0

.menu
	height: 56px

.menu-link
	display: none

.menu__list
	flex(row, flex-start, center)
	height: 100%

.menu-item
	flex(row, flex-start, center)
	flex-wrap: nowrap
	height: 100%
	padding: 0px 8px
	font-size: 13px
	text-transform: uppercase
	font-weight: 400
	color: #4e2520
	list-style-type: none

.menu-item__icon2
	padding-left: 3px
	font-size: 12px
	color: #8B4339

.menu_drop:hover .menu-drop,
.menu_drop:hover .menu-item
	display: flex
	color: #42201B

.menu_drop:hover
	background: red-light

.menu_drop
	flex(row, center)
	height: 100%
	transition: background-color 200ms ease-in-out


.menu-drop
	display: none
	position: absolute
	top: 100%
	z-index: 200
	box-shadow: rgba(0, 0, 0, 0.3) 0px 3px 10px 0px
	background: white
	
.menu-drop_padding
	padding: 40px 0px

.menu-drop__list-header
	display: block
	padding-bottom: 10px
	font-size: 15px
	font-weight: 700
	color: gray-darken

.menu-drop__list
	padding-right: 5px
	list-style-type: none

.menu-drop__item
	display: block
	padding: 4px 0px
	font-family: 'Open-Sans', sans-serif
	font-size: 13px
	color: #4b4b58

.menu__wrap
	flex(row, flex-start, center)

.menu-item__icon1
	display: none


@media (max-width: 767px)
	.menu__list
		// display: none
		flex-direction: column
		position: absolute
		top: 100%
		left: 0px
		height: auto
		width 100%
		align-items: start
		background: white
		z-index: 200
	.menu-link
		display: flex
		align-items: center
		padding: 0px 20px
		height: 56px
		width: 140px
		cursor: pointer
		font-family: 'Open-Sans', sans-serif
		font-size: 14px
		font-weight: 600
		text-transform: uppercase
		transition: background-color 200ms ease-in-out
	.menu__wrap:hover,
	.menu-link:hover
		background-color: red-light
	.menu-link__icon1
		padding-right: 10px
		font-size: 24px
	.menu-link__icon2
		padding-left: 5px
		font-size: 16px
	.menu_drop
		width: 100%
		display: flex
		flex-direction: column
	.menu-drop
		display: flex
		position: relative
		box-shadow: none
	.menu-drop__list
		display: flex
		flex-direction: column
		padding: 0px 0px 15px 0px
	.menu-drop__item
		padding-left: 20px
		color: blue-light
	.menu-drop_padding
		display: flex
		flex-direction: column
		padding: 0px
	.menu__wrap
		display: flex
		flex-direction: row
		height: 48px
		width: 100%
		padding: 0px
		border-top: solid 1px red-light
		background-color: #FFFAFA
		transition: background-color 200ms ease-in-out
	.menu-drop__wrap
		display: flex
		flex-direction: row
		align-items: center
		height: 48px
		width: 100%
		padding: 0px
		border-top: solid 1px #ededed
		background-color: #fff
	.menu-item
		width: 100%
		padding: 0px 0px 0px 20px
		font-family: 'Open-Sans', sans-serif
		font-size: 14px
		color: #000
	.menu-drop__list-header
		height: 100%
		width: 100%
		padding: 0px 0px 0px 20px
		font-family: 'Open-Sans', sans-serif
		font-size: 12px
		font-weight: 400
		line-height: 48px
		text-transform: uppercase
		color: #000
		transition: color 200ms ease-in-out
	.menu-item__icon2,
	.menu-drop__icon
		height: 48px
		width: 50px
		padding: 0px
		line-height: 48px
		text-align: center
		font-size: 18px
		cursor: pointer
	.menu-item__icon2
		color: #fff
	.menu-drop__icon
		color: #bfbfbf
	.menu-item__icon1
		display: flex
		padding-right: 10px
		font-size: 24px
		color: #a8a8a8
	.accordion-active
		background-color: red-light
	.icon-accordion-active
		background-color: #FFD5D1
	.sub-accordion-active
		background-color: #E0E0E0
	.menu-drop__list-header:hover
		color: blue-light
		
