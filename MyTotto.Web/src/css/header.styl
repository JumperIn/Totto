@media (max-width: 767px)
	.menu__list
		// display: none
		flex-direction: column
		position: absolute
		top: 100%
		left: 0px
		size(100%, auto)
		align-items: start
		background: white
		z-index: 200

	.menu-title
		flex(,,center)
		size(140px, 80px)
		padding: 0px 20px
		font(14px)
		text-transform: uppercase
		cursor: pointer
		transition: background-color 200ms ease-in-out

	.menu__wrap:hover,
	.menu-title:hover
		background-color: #f5f9d6

	.menu-title__icon1
		size(20px, 20px)
		margin-right: 10px

	.menu-title__icon2
		size(15px, 15px)
		margin-left: 5px

	.menu_drop
		width: 100%
		display: flex
		flex-direction: column

	.menu-drop
		display: flex
		position: relative
		box-shadow: none
		width: 100%
		min-height: auto
		border: none

	.menu-drop::after
	.menu-drop::before
		display: none

	.menu-drop__list
		position: inherit
		display: flex
		flex-direction: column
		min-height: auto
		padding: 0px 0px 15px 0px

	.menu-drop__item
		padding-left: 20px
		color: #000
		transition: color 200ms ease-in-out

	.menu-drop__body
		display: flex
		flex-direction: column
		width: 100%
		margin: 0
		padding: 0
		border: none

	.menu-drop__body_hover:hover
		background-color: #fff

	.menu-drop__body_hover:hover .menu-drop__wrap::before
	.menu-drop__body_hover:hover .menu-drop__wrap::after
		display: none

	.menu__wrap
		display: flex
		flex-direction: row
		size(100%, 48px)
		padding: 0px
		border-top: solid 1px #f5f9d6
		background-color: #f9fce7
		transition: background-color 200ms ease-in-out

	.menu-drop__wrap
		display: flex
		flex-direction: row
		align-items: center
		size(100%, 48px)
		padding: 0px
		border-top: solid 1px #ededed
		background-color: #fff

	.menu-item
		width: 100%
		padding: 0px 0px 0px 20px
		font-size: 14px
		color: #000

	.menu-drop__list-header
		size(100%, 100%)
		padding: 0px 0px 0px 20px
		font(12px, 300, #000)
		line-height: 48px
		text-transform: uppercase
		transition: color 200ms ease-in-out

	.menu-item__icon-drop
	.menu-drop__icon
		size(50px, 48px)
		padding: 15px
		cursor: pointer
		color: #bfbfbf

	.accordion-active
		background-color: #f5f9d6

	.icon-accordion-active
		background-color: #f5f9d6

	.sub-accordion-active
		background-color: #E0E0E0

	.menu-drop__list-header:hover
		color: main-color

	.menu::before
	.menu::after
		content: none

@media (max-width: 1199px)
	.menu::before
	.menu::after
		left: 0

	.menu::after
		right: 0
		left: auto

@media (min-width: 768px)
	.menu-item__icon-drop
		display: none