.header
	background: #ffffff

.header-frame
	height: 30px
	background-color: #e9e7a1

.header-title
	flex(row, center, stretch)
	height: 32px
	border-bottom: 1px solid #EDEDED
	background-color: #fafaea

.header-title_height
	height: 176px

.header-title__menu
	flex(row, , center)

.header-title__list
	flex(row, flex-end)
	margin: 0
	list-style-type: none

.header-title__item
	padding-left: 20px

.header-title__item_h
	margin: 0px
	font(14px, 100)

.header-info
	flex(,,center)
	height: 110px

.header-info-pers-area
.header-info-basket
	flex()

.header-info-pers-area__link
.header-info-basket__link
	flex(,,center)

.header-info-pers-area__text
.header-info-basket__text
	padding-left: 10px
	font(14px, 100)
	span
		font-weight: 700

.header-icon-pers
	size(20px, 20px)

.header-icon-basket
	size(22px, 22px)

.header-info-phone
	flex(, space-between, center)

.header-info-phone__number
	font(26px, 300)
	span
		color: main-color

.header-info-phone__link
	padding-left: 15px

.header-info-phone__link_proportions
	flex(,center, center)
	size(170px, 40px)
	background-color: main-color
	border-radius: (@height / 2)
	transition: background-color 200ms ease-in-out

.header-info-phone__link_proportions:hover
	background-color: secondary-color

.header-info-phone__link_text
	font(14px, 500, #fff)
	text-transform: uppercase

.header-info-search
	flex(row, center, center)
	max-width: 280px


.header-info-search__input
	position: relative
	height: 40px
	padding-left: 20px
	font(14px, 100, stroke-color)
	border: 1px solid stroke-color
	border-radius: (@height / 2)
	background: #fff
	transition: background-color 200ms ease-in-out

.header-info-search__input::placeholder
	font(14px, 100, stroke-color)

.header-icon-button-search
	size(30px, 30px)
	color: main-color
	transition: color 200ms ease-in-out

.header-icon-button-search:hover
	color: secondary-color

.header-info-search__button
	position: absolute
	right: 0px
	top: 4px
	border: none
	background: none
	cursor: pointer

.header-nav
	display: flex
	height: 80px
	background: linear-gradient(to bottom, #f5f9d6, #f9fce7)

.menu
	flex(, flex-start, center)
	position: relative
	height: 80px

.menu::before
.menu::after
	content: ''
	position: absolute
	size(50%, 15px)
	bottom: -25px
	left: 110px
	max-width: 400px
	box-shadow: 0 -15px 15px 5px rgba(0,0,0,0.035)
	transform: rotate(3deg)
	z-index: 1
.menu::after
	transform: rotate(-3deg)
	right: 110px
	left: auto

.menu-title
	display: none

.menu-logo
	flex()
	size(229px, 53px)
	margin-right: 20px
	position: relative

.menu-logo__link
	position: absolute
	size(229px, 53px)
	top: 0
	left: 0
	z-index: 200

.menu-logo_shadow
	position: absolute
	size(100px, 17px)
	// ставим источник тени на середину лого
	// 53/2 - 17/2
	top: 18px 
	// 229/2 - 100/2
	left: 64px
	border-radius: 50%
	background: #fff
	box-shadow: 0px 0px 120px 40px rgba(255, 255, 255, 1)
	z-index: 0

.header-icon-logo
	size(229px, 53px)
	z-index: 100

.menu__list
	flex(row, flex-start, center)
	height: 100%

.menu-item
	flex(row, flex-start, center)
	flex-wrap: nowrap
	height: 100%
	padding: 0px 15px
	font(12px)
	text-transform: uppercase
	list-style-type: none

.menu_drop:hover .menu-drop,
.menu_drop:hover .menu-item
	display: flex
	// color: #42201B

.menu_drop:hover
	background: #F5F9D6

.menu_drop
	flex(row, center)
	height: 100%
	position: relative
	transition: background-color 200ms ease-in-out


.menu-drop
	display: none
	position: absolute
	top: 100%
	width: 570px
	min-height: 420px
	background: white
	border: solid 1px stroke-color
	z-index: 200

.menu-drop::after
.menu-drop::before
	content: ''
	position: absolute
	size(0, 0)
	top: -12px
	border-style: solid
	border-width: 0 12px 12px 12px
	border-color: transparent transparent #ffffff transparent
	z-index: 200

.menu-drop::before
	top: -13px
	border-color: transparent transparent stroke-color transparent

.menu-drop__container
	flex(column)

.menu-drop__title
	flex(row, space-between, center)
	padding: 36px 0 15px 0
	border-bottom: solid 1px stroke-color

.menu-drop__catalog
	font(15px, 500)
	text-transform: uppercase

.menu-drop__see-all
	font(14px)
	text-transform: uppercase

.menu-drop__body
	flex(column, flex-start)
	position: relative
	width: 50%
	margin: 15px 0 25px 0
	padding: 5px 0 25px 0
	border-right: solid 1px stroke-color

.menu-drop__body_hover:hover .menu-drop__list
	flex(column, flex-start)

.menu-drop__body_hover:hover ~ .menu-drop-img
	display: none


.menu-drop__list-header
	display: block
	padding: 8px 0
	font(16px,, #464647)

.menu-drop__list
	display: none
	position: absolute
	top: 0
	right: -100%
	width: 100%
	min-height: 200px
	padding: 5px 5px 0 40px
	list-style-type: none

.menu-drop__item
	display: block
	position: relative
	padding: 8px 0px
	font(16px, 100, #676767)

.menu-drop__item:hover
	color: main-color

.menu-drop__item:hover::before
	position: absolute
	content: ''
	size(24px, 19px)
	fill: black
	top: 8px
	left: -30px
	background-image: url('../images/logo-head.svg')
	background-repeat: no-repeat

.menu__wrap
	flex(row, flex-start, center)

.menu-drop__wrap
	position: relative

.menu-drop__body_hover:hover
	background-color: #e9e7a0

.menu-drop__body_hover:hover .menu-drop__wrap::before
.menu-drop__body_hover:hover .menu-drop__wrap::after
	content: ''
	position: absolute
	size(0, 0)
	top: 5px
	right: -1px
	border-style: solid
	border-width: 12px 12px 12px 0
	border-color: transparent #fff transparent transparent
	z-index: 200

.menu-drop__body_hover:hover .menu-drop__wrap::before
	right: 0px
	border-color: transparent stroke-color transparent transparent

.menu-drop-img
	flex(column)
	position: absolute
	top: 0
	right: -100%

.menu-drop-img__face
	size(200px, 200px)
	background-image: url(../images/cream.jpg)
	background-size: 100% 100%
	background-repeat: no-repeat

.menu-drop-img__sale
	flex(, center, center)
	size(200px, 100px)
	padding: 0 20px
	background-color: #e9e7a0

.menu-drop-img__text
	font(14px)

.header-info__wrapper
	flex(row, space-between, center)

.header-info_fixed
	position: fixed
	top: 0
	height: 61px
	background-color: #fff
	z-index: 2

.header-info_shadow
	box-shadow: 0 3px 10px 0 rgba(0,0,0,0.3)

.header-nav_fixed
	position: fixed
	top: 61px
	box-shadow: 0 0 0 2000px rgba(0,0,0,0.4), 0 3px 10px 0 rgba(0,0,0,0.3)
	z-index: 1

