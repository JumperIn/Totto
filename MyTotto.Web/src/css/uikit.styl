.o-button
	flex(, center, center)
	height: 40px
	padding: 0 20px
	font-size: 14px
	font-weight: 500
	text-transform: uppercase
	border-radius: 20px
	cursor: pointer

.o-button_main
	color: #fff
	background-color: main-color
	transition: background-color 200ms ease-in-out


.o-button_main:hover
	background-color: secondary-color

.o-button-back
	flex(, center, center)
	border: solid 1px stroke-color
	color: gray-dark-color

.o-button-back__icon
	size(20px, 20px)
	color: stroke-color

.o-button-back__text
	padding-right: 12px

.o-button-selection__text
	padding-left: 12px

.o-button-selection__icon
	size(20px, 20px)
	color: #fff
