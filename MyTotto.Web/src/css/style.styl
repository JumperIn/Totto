body
	background-color: #fff
	margin: 0
	font-size: 16px

:active, :hover, :focus
	outline: 0
	outline-offset: 0

a, a:hover, a:focus, a:active
	text-decoration: none

body, div, main, section, header, footer, nav, ul, li, a, p, form, input, button
	font-family: 'Museo', sans-serif

h1, h2, h3, h4, h5, h6
	margin: 0

button
	padding: 0
	background: none
	border: none
	cursor: pointer

p, ul,
.col, .col-auto, .col-1, .col-2, .col-3, .col-4, .col-5, .col-6, .col-7, .col-8, .col-9, .col-10, .col-11, .col-12,
.row,
.container,
.container-fluid
	margin: 0
	padding-right: 0
	padding-left: 0

.main
	flex(column, ,center)
	position: relative
	z-index: 2

// класс для создания обёртки с максимальной шириной 1180px
.cover
	display: flex
	max-width: 1180px
	width: 100%

.relative
	position: relative

.hidden
	display: none !important

@media (max-width: 767px)
	.cover
		padding: 0 20px