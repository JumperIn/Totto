*
	box-sizing: border-box

body
	background-color: #fff
	margin: 0
	font-size: 16px

:active, :hover, :focus
	outline: 0
	outline-offset: 0

a, a:hover, a:focus, a:active
	text-decoration: none

body, div, main, section, header, footer, nav, ul, li, a, p, form, input, button
	font-family: 'Museo', sans-serif

h1, h2, h3, h4, h5, h6
	margin: 0

button
	padding: 0
	background: none
	border: none
	cursor: pointer

p, ul,
[class*="col"],
.row,
.container,
.container-fluid
	margin: 0
	padding-right: 0
	padding-left: 0

.main
	flex(column, ,center)
	position: relative
	background-color: #fff
	z-index: 2

// класс для создания обёртки с максимальной шириной 1180px
.cover
	display: flex
	max-width: 1180px
	width: 100%

.relative
	position: relative

.hidden
	display: none !important

@media (min-width: 1200px)
	.cover
		min-width: 1180px

@media (max-width: 1199px)
	.cover
		padding: 0 20px