.main
	flex(column, ,center)

.main-content_padding
	padding-top: 40px

.main-content
	display: flex 
	flex-direction: column
	align-items: center
	min-width: 290px
	background: #fff

.main-nav__list
	display: flex
	justify-content: center
	list-style-type: none
	margin: 0
	padding: 0

.main-nav_center
	padding:  0px 5px 10px 0px

.main-nav__item
	display: flex
	align-items: center
	height: 50px
	padding: 0px 15px
	border: 2px solid #e0e0e0
	border-radius: 20px
	font-size: 12px
	text-transform: uppercase
	color: gray
	transition: color 200ms ease-in-out
	transition: border 200ms ease-in-out
	cursor: pointer

.main-nav__item:hover
	color: #6A6A77
	border: 2px solid #C5C5C5

.main-nav__item_active,
.main-nav__item_active:hover
	color: blue-light
	border: 2px solid blue-light

.button-left,
.button-right
	display: flex
	align-items: center
	justify-content: center
	color: #d4d4d4
	cursor: pointer

.carousel
	overflow: hidden

.products-wrapper
	display: flex
	flex-wrap: nowrap
	transition: transform 500ms ease-in-out

.products__item_padding
	padding: 0px 5px 5px 5px

.product
	display: flex
	flex-direction: column
	align-items: center

.product_img
	width: 100%
	height: auto
	margin-bottom: 10px

.product__info
	display: flex
	flex-direction: column
	align-items: center

.product__name
	display: block
	margin-bottom: 7px
	font-size: 12px
	text-align: center
	text-transform: uppercase
	color: product-name-color
	overflow: hidden

.product__price
	font-weight: 700
	text-align: center
	color: product-name-color

.product__inbasket
	padding-top: 7px

.product__inbasket_buy
	display: block
	padding: 5px 20px 5px
	text-transform: uppercase
	font-size: 14px
	text-align: center
	border: 2px solid basket-color
	color: basket-color
	opacity: 0
	
.product:hover .product__inbasket_buy
	opacity: 1

.hidden
	display: none !important