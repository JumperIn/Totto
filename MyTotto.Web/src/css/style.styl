body {
    background-color: body-color;
	margin: 0px 0px;
	font-size: fontsize ;
	font-family: Arial, sans-serif;
}

a, a:hover, a:focus, a:active
	text-decoration: none


p, ul,
.col, .col-auto, .col-1, .col-2, .col-3, .col-4, .col-5, .col-6, .col-7, .col-8, .col-9, .col-10, .col-11, .col-12,
.row,
.container,
.container-fluid
	margin: 0
	padding-right: 0
	padding-left: 0

.container_padding
	padding: 0px 20px

/* Дальше можно разбить на файлы-блоки аналогично */

.main
	display: flex
	flex-direction: column
	align-items: center


.main-content_padding
	padding-top: 40px

.main-content
	display: flex 
	flex-direction: column
	align-items: center
	// max-width: 1500px
	min-width: 290px
	background: #fff
	// overflow: hidden

.main-nav__list
	display: flex
	justify-content: center
	list-style-type: none
	margin: 0
	padding: 0


.main-nav_center
	padding:  0px 5px 10px 0px

.main-nav__item
	height 50px
	font-size: 12px
	padding: 0px 15px
	display: flex
	align-items: center
	border: 2px solid #e0e0e0
	border-radius: 20px
	text-transform: uppercase
	color: #89899a
	transition: color 200ms ease-in-out
	transition: border 200ms ease-in-out
	cursor: pointer

.main-nav__item:hover
	color: #6A6A77
	border: 2px solid #C5C5C5

// .main-nav__item:focus
// 	color: #1db6ca
// 	border: 2px solid #1db6ca


.main-nav__item_active,
.main-nav__item_active:hover
	color: #1db6ca
	border: 2px solid #1db6ca



.button-left,
.button-right
	display: flex
	align-items: center
	justify-content: center
	color: #d4d4d4
	cursor: pointer

.carousel
	overflow: hidden

.products-wrapper
	display: flex
	flex-wrap: nowrap
	// width: wrapper-size
	transform: translateX(0)
	transform: translateX()
	transition: transform 500ms ease-in-out

.products__item_padding
	padding: 0px 5px 5px 5px

.product
	display: flex
	flex-direction: column
	align-items: center

.product_img
	width: 100%
	height: auto
	margin-bottom: 10px

.product__info
	display: flex
	flex-direction: column
	align-items: center

.product__name
	display: block
	font-size: 12px
	color: product-name-color
	text-transform: uppercase
	text-align: center
	margin-bottom: 7px
	overflow: hidden

.product__price
	color: product-name-color
	font-weight: 700
	text-align: center

.product__inbasket
	padding-top: 7px

.product__inbasket_buy
	display: block
	text-transform: uppercase
	font-size: 14px
	text-align: center
	color: basket-color
	border: 2px solid basket-color
	padding: 5px 20px 5px
	opacity: 0
	
.product:hover .product__inbasket_buy
	opacity: 1