.new-products
	flex(, center)
	width: 100%
	background-color: #fff
	z-index: 2

.new-product__container
	position: relative
	overflow: hidden

.new-products__wrapper
	flex()
	flex-wrap: nowrap
	padding: 50px 0
	transition: transform 400ms ease-in-out

.new-product
	flex(column, center, center)

.new-product__body
	padding: 0 15px

.new-product__img
	size(100%, 322px)
	background-position: 100%
	background-size: cover

.new-product__wrapper
	flex(column, center, center)
	width: 100%
	border: 1px solid stroke-color
	border-top: none

.new-product__title-wrapper
	flex(,,center)
	height: 40px
	margin: 20px 15px 20px 15px
	overflow: hidden

.new-product__title
	font(18px, 700)
	text-align: center

.new-product__text-wrapper
	flex(,,center)
	height: 45px
	margin: 0 15px 20px 15px
	overflow: hidden

.new-product__text
	font(14px)
	text-align: center

.new-products-buttons
	width: 100%

.new-products-button
	display: none
	justify-content: center
	align-items: center
	position: absolute
	size(40px, 72px)
	top: 189px
	background: #fff
	color: #acacac
	opacity: 0.7
	cursor: pointer

.new-products-button_left
	left: 15px

.new-products-button_right
	right: 15px

.new-products-buttons__angle-left
.new-products-buttons__angle-right
	padding: 10px

.new-products:hover .new-products-button
	display: flex